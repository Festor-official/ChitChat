<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:layout_margin="8dp">


    <TextView
            android:id="@+id/chat_name"
            android:text="Jojo jotaro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/chat_image" app:layout_constraintTop_toTopOf="parent"
            android:textColor="#000000" android:textSize="16sp" android:layout_margin="4dp"/>
    <ImageView
            android:id="@+id/chat_image"
            android:layout_width="50dp"
            android:layout_height="50dp" android:background="#7E83A8"/>

    <TextView
            android:id="@+id/last_message"
            android:text="Hi there!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/chat_name" app:layout_constraintStart_toEndOf="@+id/chat_image"
            android:layout_margin="4dp"/>
    <ImageView
            android:id="@+id/online_status"
            android:layout_width="10dp"
            android:layout_height="10dp" android:background="#1BAF45"
            app:layout_constraintBottom_toBottomOf="@+id/chat_image"
            app:layout_constraintEnd_toEndOf="@+id/chat_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>